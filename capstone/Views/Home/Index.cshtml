﻿@using capstone.Models
@model List<prodotti>
@if (ViewBag.ok != null)
{

}
else
{
    <h2 class="text-center text-capitalize"> scopri i nostri migliori prodotti  </h2>
    for (var i = 0; i < 11; i++)
    {
        if (i < Model.Count)
        {
            <div style="width: 18rem;">
                <img src="~/Content/img/@Model[i].fotoprodotto" class="imgCarello" />
                <div class="card-body">
                    <h5 class="card-title">@Model[i].nomeprodotto</h5>
                    <p class="card-text"> @Model[i].prezzo€</p>
                    @if (@Model[i].valutazione != null && @Model[i].valutazione != 0)
                    {
                        for (var i2 = 0; i2 < Model[i].valutazione; i2++)
                        {

                            <i class="fa-solid fa-star" style="color: #fea21c;"></i>

                        }

                        int n4 = 5 - (int)Model[i].valutazione;

                        for (var i2 = 0; i2 < n4; i2++)
                        {

                            <i class="fa-regular fa-star" style="color: #fea21c;"></i>
                        }

                    }
                    <a href="..\Home\dettagli\@Model[i].idprodotti" class="btn btn-primary">dettagli prodotto</a>
                </div>
            </div>

        }
    }
}
@model List<capstone.Models.aziende>

@if (ViewBag.azienda != null)
{
    <p>@ViewBag.azienda </p>
}

@if (Model.Count > 0)
{
    <table class="table2">
        <thead>
            <tr>
                <th>Ragione Sociale</th>
                <th>telefono aziendale</th>
                <th>categoria</th>
                <th>paese</th>
                <th>citta</th>
                <th>provinca</th>
                <th>CAP</th>
                

                <th>link</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var a in Model)
            {
                <tr>
                    <td>@a.nomeazienda</td>
                    <td>@a.telfonoaziendale</td>
                    <td>@a.categoria.categoria</td>
                    <td>@a.Paese</td>
                    <td>@a.provinca</td>
                    <td>@a.citta</td>
                    <td>@a.CAP</td>
                    @if (User.IsInRole("amministratore"))
                    {
                        <td><a class="btn-danger" href="./nonapprovare/@a.idaziende"> non approvare</a>
                        <a class="btn-success" href="./approvare/@a.idaziende"> approva</a></td>
                    }
                    else
                    {
                        <td><a class="btn btn-warning" href="./modificaAzienda/@a.idaziende"> modifica</a></td>
                    }
                </tr>
            }
        </tbody>
    </table>}